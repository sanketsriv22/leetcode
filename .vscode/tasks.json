{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CMake Configure",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "."
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "cmake",
            "label": "Build Current File",
            "command": "build",
            "targets": [
                "${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "Run Current Executable",
            "command": "${workspaceFolder}/build/${fileBasenameNoExtension}",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build and Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Current File",
                "Run Current Executable"
            ]
        },
    ]
}